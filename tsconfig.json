{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"],
    "types": [
      "@dcloudio/types", 
      "@uni-helper/uni-ui-types",
      "@uni-helper/uni-app-types"
    ]
  },
  "vueCompilerOptions": {
    "plugins": ["@uni-helper/uni-app-types/volar-plugin"]
  },
  "include": [
    "components.d.ts",
    "auto-imports.d.ts", 
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.vue"
  ],
  "exclude": [
    "src/uni_modules", 
    "node_modules", 
    "unpackage", 
    "src/**/*.nvue"
  ]
}
